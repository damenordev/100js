---
import { ButtonStar, SectionBigTitle } from '@/ui'

import HomeProjectCard from './HomeProjectCard.astro'

const PROJECTS_LINKS = [
  { name: 'Arkanoid', slug: 'arkanoid' },
  { name: 'Api Geo IP', slug: 'api-geo-ip' },
  { name: 'Tetris', slug: 'tetris' },
  { name: 'Tiermaker', slug: 'tiermaker' },
  { name: 'Tinder', slug: 'tinder' },
