---
import { IconAstro, IconCSS, IconHTML, IconJS, IconTailwind, IconTypescript } from '@/assets'
import { ContainerAnimated, SectionBigTitle } from '@/ui'

const TECNOLOGIES = ['Tailwind', 'Astro', 'Typescript', 'HTML', 'Javascript', 'CSS']
---

